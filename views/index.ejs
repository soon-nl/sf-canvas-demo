    <script>
        let req = "<%= req %>"; 

        // Create a new DOMParser
        const parser = new DOMParser();

        // Use the parser to parse the string as XML
        const dom = parser.parseFromString('<!doctype html><body>' + req, 'text/html');

        // Extract the decoded string from the parsed DOM
        const decodedString2 = dom.body.textContent;

        console.log('decodedString2', decodedString2);

        var wrapper = document.getElementById("reqCode"); 

        // Create json-tree
        var tree = jsonTree.create(JSON.parse(decodedString2), wrapper);  
    </script>
